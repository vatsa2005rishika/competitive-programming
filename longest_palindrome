#include<iostream>
#include<string>
using namespace std;
int main() {
    string str;
    cout << "Enter a string: ";
    getline(cin, str);
    int n = str.length();
    int maxLength = 1, start = 0;   
    for(int i = 0; i < n; i++) {
        for(int j = 0; j <=1; j++) {
            int left = i, right = i + j;
            while(left >= 0 && right < n && str[left] == str[right]) {
                if(right - left + 1 > maxLength) {
                    maxLength = right - left + 1;
                    start = left;
                }
                left--;
                right++;
            }   
        }
    }
    cout << "Longest Palindrome: ";
    for(int i = start; i < start + maxLength; i++) {
        cout << str[i];
    }
            
