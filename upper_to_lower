#include<iostream>
#include<string>
using namespace std;

int main() {
    string str;
    cout << "Enter a string: ";
    getline(cin, str);
    for (char &c : str) {
        c = tolower(c);
    }
    cout << "String in lowercase: " << str << endl;
    for (char &c : str) {
        c = toupper(c);
    }
    cout << "String in uppercase: " << str << endl;
    return 0;
}  
